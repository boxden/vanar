// ============= DATA
$semestr_1 = 9;
$semestr_2 = 8;
$examen    = 9;
// ============= CALCULATIONS
$sredn     = (int)(($semestr_1+$semestr_2+$examen)/3);
// $result = (type) expression;
// ============= DISPLAY
print $sredn;



// ============= DATA
$name      ='Ivan Jorin';
$semestr_1 = 9;
$semestr_2 = 8;
$examen    = 9;
// ============= CALCULATIONS
$sredn     = (int)(($semestr_1+$semestr_2+$examen)/3);
// $result = (type) expression;
// ============= DISPLAY
print "Srednaia ocenka ucenika \"$name\" = $sredn"; // interpolation
