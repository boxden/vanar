/// TROL
const ROUTE          = " 30 - Airport";
const MAX_PASSANGERS = 40;
      $passangers     = 2;
/// Airport
    $stop_1_passangers = 65;
    print "Airport : $stop_1_passangers waiting passangers.\n";
    $free_seats = MAX_PASSANGERS - $passangers;
    if( $free_seats > 0 ){
        $passangers        += $free_seats;
        $stop_1_passangers -= $free_seats;
        print "TROL : $passangers passangers inside.\n";
        print "STOP : $stop_1_passangers left.\n";
    } else {
        print "Too many passangers.\n";
    }

    Это было правильное задание


