// operators
    // Logical
    // and && -> AND 1 * 1
    print true && true && false; - false
    // or ||
    print true || false or true ; - true
    // ! not
    print !!!true;
    // xor ^^
    echo true xor true; хотя бы одна правда должна быть что бы было true

    // Bitwise Operators
    // & -> and
    // | -> or
    // ^ -> xor
    // ~ -> not

    // << - left shift
    // >> - right shift

    print 7 >> 2;
    // ...0000000111 >>> ...000000000001;
    print 7 << 2;
    // ...0000000111 <<< ...000000011100;

    // FLAG -> CHECKBOX

// operators
    // Error Control

    // @ -> Этот опиратор не относиться к синтаксическим ошибкам
            и не к Критическим ошибкам
    // @ -> !!! syntax errors/ critical

